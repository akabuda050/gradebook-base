{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
